<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.lurenman.androidtransitions.MainActivity">

    <Button
        android:id="@+id/bt_Transitions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Transitions"
        android:textAllCaps="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/iv_background" />

        <Button
            android:id="@+id/bt_Shared_Elements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shared Elements"
            android:textAllCaps="false" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_View_animations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:text="View animations"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/bt_CircularRevealAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:text="Circular Reveal Animation"
        android:textAllCaps="false" />

</LinearLayout>
